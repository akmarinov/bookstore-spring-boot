# Environment Configuration for Bookstore Application
# Copy this file to .env and modify the values as needed

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=bookstore_db
MYSQL_USER=bookstore
MYSQL_PASSWORD=your_secure_password_here
MYSQL_PORT=3306

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
APP_VERSION=1.0.0
BUILD_DATE=
VCS_REF=

# Backend Configuration
BACKEND_PORT=8080
BACKEND_MGMT_PORT=8081

# Frontend Configuration  
FRONTEND_PORT=3000

# PhpMyAdmin Configuration
PHPMYADMIN_PORT=8082

# ==============================================
# PRODUCTION CONFIGURATION
# ==============================================
# Data and logs paths (for production)
DATA_PATH=./data
LOGS_PATH=./logs

# Proxy Configuration (if using nginx-proxy)
PROXY_HTTP_PORT=80
PROXY_HTTPS_PORT=443

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# JWT Secret (if using JWT authentication)
JWT_SECRET=your_jwt_secret_here_make_it_long_and_secure

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# ==============================================
# MONITORING AND OBSERVABILITY
# ==============================================
# Enable/disable specific monitoring features
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
PROMETHEUS_ENABLED=true

# ==============================================
# MAIL CONFIGURATION (if needed)
# ==============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@domain.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@yourdomain.com

# ==============================================
# EXTERNAL SERVICES (if any)
# ==============================================
# API keys for external services
EXTERNAL_API_KEY=your_api_key_here
EXTERNAL_SERVICE_URL=https://api.external-service.com

# ==============================================
# DEVELOPMENT SPECIFIC
# ==============================================
# Debug settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Development database (for local development)
DEV_DB_HOST=localhost
DEV_DB_PORT=3306
DEV_DB_NAME=bookstore_dev_db

# ==============================================
# SSL/TLS CONFIGURATION
# ==============================================
# SSL certificate paths (for production)
SSL_CERT_PATH=/etc/ssl/certs/bookstore.crt
SSL_KEY_PATH=/etc/ssl/private/bookstore.key

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket