# Production environment variables
# These override the default .env file values during production builds

# Application Configuration
VITE_APP_NAME=Bookstore Frontend
VITE_NODE_ENV=production

# API Configuration (use environment variables from deployment)
VITE_API_URL=${VITE_API_URL}
VITE_API_BASE_PATH=/api
VITE_API_TIMEOUT=15000

# Production Optimizations
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ENABLE_HOT_RELOAD=false

# Debugging (disabled in production)
VITE_DEBUG=false
VITE_LOG_LEVEL=error
VITE_SHOW_CONSOLE_LOGS=false

# Build Configuration for Production
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_ANALYZE=false
VITE_USE_CDN=false

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_BUDGET_KB=1024

# Security (strict for production)
VITE_ENABLE_CSP=true
VITE_ENABLE_STRICT_MODE=true

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=${VITE_SENTRY_DSN}

# CDN Configuration
VITE_CDN_URL=${VITE_CDN_URL}
VITE_STATIC_ASSETS_URL=${VITE_STATIC_ASSETS_URL}