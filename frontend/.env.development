# Development environment variables
# These override the default .env file values during development

# Application Configuration
VITE_APP_NAME=Bookstore Frontend (Development)
VITE_NODE_ENV=development

# API Configuration
VITE_API_URL=http://localhost:8080
VITE_API_BASE_PATH=/api/v1
VITE_API_TIMEOUT=30000

# Development Server Configuration
VITE_PORT=5173
VITE_HOST=localhost
VITE_OPEN_BROWSER=true

# Development Features
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ENABLE_HOT_RELOAD=true

# Debugging
VITE_DEBUG=true
VITE_LOG_LEVEL=debug
VITE_SHOW_CONSOLE_LOGS=true

# Build Configuration for Development
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false
VITE_BUILD_ANALYZE=false

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_BUDGET_KB=2048

# Security (relaxed for development)
VITE_ENABLE_CSP=false
VITE_ENABLE_STRICT_MODE=false