# Test environment variables
# These override the default .env file values during testing

# Application Configuration
VITE_APP_NAME=Bookstore Frontend (Test)
VITE_NODE_ENV=test

# API Configuration for Testing
VITE_API_URL=http://localhost:8080
VITE_API_BASE_PATH=/api
VITE_API_TIMEOUT=5000

# Test Configuration
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_MOCK_API=true
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ENABLE_HOT_RELOAD=false

# Debugging for Tests
VITE_DEBUG=false
VITE_LOG_LEVEL=warn
VITE_SHOW_CONSOLE_LOGS=false

# Build Configuration for Testing
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false
VITE_BUILD_ANALYZE=false

# Performance Monitoring (disabled in tests)
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Security (relaxed for testing)
VITE_ENABLE_CSP=false
VITE_ENABLE_STRICT_MODE=true

# Test-specific settings
VITE_TEST_TIMEOUT=10000
VITE_ENABLE_MSW=true
VITE_MOCK_DELAY=100